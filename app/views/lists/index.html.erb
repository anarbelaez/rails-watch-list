<%# Banner - User's name %>
<div class="row my-5">
  <div class="col-12">
    <%= render "shared/avatar" %>
    <p class="m-0 mt-2 text-center">Korita</p>
  </div>
</div>
<%# Banner - End user's name %>

<%# Lists %>
<div class="row px-1 gx-3">
  <p class="fs-5 mb-2">My lists</p>
  <hr>

  <% @lists.each do |list| %>
    <div class="col-2 col-md-2">
      <%= render "shared/card", object: list, locals: { height: "180px", local: false } %>
    </div>
  <% end %>

</div>
<%# End Lists %>
